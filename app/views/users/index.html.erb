      <div class="col-lg-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            Registered users
          </div>
          <!-- /.panel-heading -->
            <div class="panel-body">
              <%= link_to 'Add user', new_user_path, class: "btn" %>
              <div class="table-responsive table-bordered">
                <table id="users" class="table">
                  <thead>
                    <tr>
                      <th>Username</th>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Email</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @users.each do |user| %>
                    <% if user != current_user %>
                    <tr>
                      <th><%= user.username %></th>
                      <td><%= user.first_name %></td>
                      <td><%= user.last_name %></td>
                      <td><%= user.email %></td>
                      <td>
                        <%= link_to '', user_path(user), :title => 'View', class: "btn btn-default glyphicon glyphicon-file" %>
                        <%= link_to '', edit_user_path(user), :title => 'Edit', class: "btn btn-default glyphicon glyphicon-edit" %>
                        <%= link_to '', user_path(user), :method => :delete, :title => 'Delete', :class => "btn btn-default glyphicon glyphicon-remove", :data => { confirm: 'Are you sure?' } %>
                      </td>
                    </tr>
                    <% end %>
                  <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
      </div>
      <!-- /.col-lg-12 -->

<script>
$(document).ready(function($) {
    $('#users').dataTable ({
        sPaginationType : "full_numbers",
        "columns": [
            null,
            null,
            null,
            null,
           { "width": "114px" }
        ]
    });
});
</script>
