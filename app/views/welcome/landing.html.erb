<%= render 'navigation' %>

  <br><br><br><br>
<%= render 'layouts/messages' %>
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Available rooms
      </div>
      <!-- /.panel-heading -->
        <div class="panel-body">
          <div class="table-responsive table-bordered">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Room Name</th>
                  <th>Description</th>
                  <% if can? :read, @room %>
                  <th>Actions</th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
              <% @rooms.each do |room| %>
                <tr>
                  <td></td>
                  <td><%= room.name %></td>
                  <td><%= room.description %></td>
                  <% if can? :read, room %>
                  <td><%= link_to 'Show', '/landing/'+room.id.to_s %></td>
                  <% end %>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.table-responsive -->
        </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
